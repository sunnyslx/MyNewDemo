<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sunny.myframedemo">

    <!-- 允许应用程序改变网络状态 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <!-- 允许应用程序改变WIFI连接状态 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- 允许应用程序访问有关的网络信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 允许应用程序访问WIFI网卡的网络信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 允许应用程序完全使用网络 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppNOTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".retrofit.RetrofitActivity" />
        <activity android:name=".rxjava.RxJavaActivity" />
        <activity
            android:name=".toolbarscroll.ScrollActivity"
            android:theme="@style/AppNOTheme" />
        <activity android:name=".viewpager.ViewPagerActivity" />
        <activity android:name=".recyclerview.DeleteRecyclerViewActivity" />
        <activity
            android:name=".tool.ToolBarActivity"
            android:theme="@style/AppNOTheme" />
        <activity android:name=".socket.SocketActivity" />
        <activity android:name=".webview.WebViewActivity" />
        <activity
            android:name=".login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".login.google.TaskActivity"
            android:theme="@style/AppNOTheme"></activity>
        <activity android:name=".login.google.addedittask.AddEditTaskActivity"></activity>
    </application>

</manifest>